        android:background="#D3756B"
        >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Merhaba"
            android:textSize="25sp"
            android:background="#D3756B"
            android:textColor="@color/white"
            />


    </LinearLayout>

    <!-- Altta butonlar -->
