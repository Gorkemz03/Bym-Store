<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Files.Create_User"
    android:orientation="vertical"
    android:backgroundTint="#FFC3A1">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:backgroundTint="#FFC3A1">

        <RadioButton
            android:id="@+id/Kullanici"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kullanıcı Hesabı"
            android:layout_marginHorizontal="25dp"
            android:layout_marginStart="70dp"
            android:checked="true"
            android:backgroundTint="#FFC3A1"/>

        <RadioButton
            android:id="@+id/Satici"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Satıcı Hesabı"
            android:layout_marginHorizontal="25dp"
            android:backgroundTint="#FFC3A1"/>

    </RadioGroup>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/deneme"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:defaultNavHost="true"
        app:navGraph="@navigation/create_user_navigation"
        android:layout_marginTop="25dp"/>



</LinearLayout>
