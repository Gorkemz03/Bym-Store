<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.navigation_buttons.notifications.Satici.fragments.recyclerUpdate.updateOnClick">

    <Button
        android:id="@+id/ekle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Ürünü Ekle" />

    <EditText
        android:id="@+id/isim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
    android:hint="Ürünün İsmini Giriniz"
    android:textAlignment="center"
    android:textSize="22sp" />

    <EditText
        android:id="@+id/Resim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
    android:hint="Ürünün Resim URL'sini Giriniz"
    android:textAlignment="center"
    android:textSize="22sp" />

    <EditText
        android:id="@+id/Fiyat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
    android:hint="Ürünün Fiyatını Giriniz"
    android:textAlignment="center"
    android:textSize="22sp" />

    <EditText
        android:id="@+id/Acıklama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Ürünün Açıklamasını Giriniz"
        android:textAlignment="center"
        android:textSize="22sp" />

</FrameLayout>
